[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/home/root/ddfood_backend
ExecStart=/home/root/ddfood_backend/venv/bin/gunicorn --access-logfile - --workers 3 --bind unix:/home/root/ddfood_backend/ddfood_backend.sock ddfood_backend.wsgi:application

[Install]
WantedBy=multi-user.target